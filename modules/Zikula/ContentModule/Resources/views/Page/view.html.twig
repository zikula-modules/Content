{# purpose of this template: pages list view #}
{% extends routeArea == 'admin' ? '@ZikulaContentModule/adminBase.html.twig' : '@ZikulaContentModule/base.html.twig' %}
{% trans_default_domain 'zikulacontentmodule' %}
{% block title own ? 'My pages'|trans : 'Pages list'|trans %}
{% block admin_page_icon 'list-alt' %}
{% block content %}
    <div class="zikulacontentmodule-page zikulacontentmodule-view">
        {% set viewActions = knp_menu_get('zikulaContentMenuViewActions', [], {objectType: 'page', area: routeArea}) %}
        {{ knp_menu_render(viewActions, {template: '@ZikulaMenuModule/Override/bootstrap_fontawesome.html.twig'}) }}
        
        {{ include('@ZikulaContentModule/Page/viewQuickNav.html.twig') }}{# see template file for available options #}

        {% if routeArea == 'admin' %}
        <form action="{{ path('zikulacontentmodule_page_' ~ routeArea ~ 'handleselectedentries') }}" method="post" id="pagesViewForm">
            <div>
        {% endif %}
            <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover table-sm">
                <colgroup>
                    {% if routeArea == 'admin' %}
                        <col id="cSelect" />
                    {% endif %}
                    <col id="cItemActionsStart" />
                    {% if routeArea == 'admin' %}
                    <col id="cWorkflowState" />
                    {% endif %}
                    <col id="cTitle" />
                    <col id="cViews" />
                    <col id="cActive" />
                    <col id="cActiveFrom" />
                    <col id="cActiveTo" />
                    <col id="cInMenu" />
                    <col id="cCurrentVersion" />
                </colgroup>
                <thead>
                <tr>
                    {% if routeArea == 'admin' %}
                        <th id="hSelect" scope="col" class="text-center">
                            <input type="checkbox" class="zikulacontent-mass-toggle" />
                        </th>
                    {% endif %}
                    <th id="hItemActionsStart" scope="col" class="">{% trans %}Actions{% endtrans %}</th>
                    {% if routeArea == 'admin' %}
                    <th id="hWorkflowState" scope="col" class="text-left">
                        <a href="{{ sort.workflowState.url }}" title="{{ 'Sort by %fieldName%'|trans({'%fieldName%': 'state'})|e('html_attr') }}" class="{{ sort.workflowState.class }}">{% trans %}State{% endtrans %}</a>
                    </th>
                    {% endif %}
                    <th id="hTitle" scope="col" class="text-left">
                        <a href="{{ sort.title.url }}" title="{{ 'Sort by %fieldName%'|trans({'%fieldName%': 'title'})|e('html_attr') }}" class="{{ sort.title.class }}">{% trans %}Title{% endtrans %}</a>
                    </th>
                    <th id="hViews" scope="col" class="text-right">
                        <a href="{{ sort.views.url }}" title="{{ 'Sort by %fieldName%'|trans({'%fieldName%': 'views'})|e('html_attr') }}" class="{{ sort.views.class }}">{% trans %}Views{% endtrans %}</a>
                    </th>
                    <th id="hActive" scope="col" class="text-center">
                        <a href="{{ sort.active.url }}" title="{{ 'Sort by %fieldName%'|trans({'%fieldName%': 'active'})|e('html_attr') }}" class="{{ sort.active.class }}">{% trans %}Active{% endtrans %}</a>
                    </th>
                    <th id="hActiveFrom" scope="col" class="text-left">
                        <a href="{{ sort.activeFrom.url }}" title="{{ 'Sort by %fieldName%'|trans({'%fieldName%': 'active from'})|e('html_attr') }}" class="{{ sort.activeFrom.class }}">{% trans %}Active from{% endtrans %}</a>
                    </th>
                    <th id="hActiveTo" scope="col" class="text-left">
                        <a href="{{ sort.activeTo.url }}" title="{{ 'Sort by %fieldName%'|trans({'%fieldName%': 'active to'})|e('html_attr') }}" class="{{ sort.activeTo.class }}">{% trans %}Active to{% endtrans %}</a>
                    </th>
                    <th id="hInMenu" scope="col" class="text-center">
                        <a href="{{ sort.inMenu.url }}" title="{{ 'Sort by %fieldName%'|trans({'%fieldName%': 'in menu'})|e('html_attr') }}" class="{{ sort.inMenu.class }}">{% trans %}In menu{% endtrans %}</a>
                    </th>
                    <th id="hCurrentVersion" scope="col" class="text-right">
                        <a href="{{ sort.currentVersion.url }}" title="{{ 'Sort by %fieldName%'|trans({'%fieldName%': 'current version'})|e('html_attr') }}" class="{{ sort.currentVersion.class }}">{% trans %}Current version{% endtrans %}</a>
                    </th>
                </tr>
                </thead>
                <tbody>
            
            {% for page in items %}
                <tr>
                    {% if routeArea == 'admin' %}
                        <td headers="hSelect" class="text-center">
                            <input type="checkbox" name="items[]" value="{{ page.getKey() }}" class="zikulacontent-toggle-checkbox" />
                        </td>
                    {% endif %}
                    <td id="itemActions{{ page.getKey() }}Start" headers="hItemActionsStart" class="actions">
                        {% set itemActions = knp_menu_get('zikulaContentMenuItemActions', [], {entity: page, area: routeArea, context: 'view'}) %}
                        <div class="dropdown item-actions">
                            <a id="itemActions{{ page.getKey() }}DropDownToggleStart" role="button" data-toggle="dropdown" href="javascript:void(0);" class="d-none dropdown-toggle"><i class="fa fa-tasks"></i></a>
                            {{ knp_menu_render(itemActions, {template: '@ZikulaMenuModule/Override/bootstrap_fontawesome.html.twig'}) }}
                        </div>
                    </td>
                    {% if routeArea == 'admin' %}<td headers="hWorkflowState" class="text-left nowrap">
                        {{ page.workflowState|zikulacontentmodule_objectState }}
                    </td>
                    {% endif %}<td headers="hTitle" class="text-left">
                        <a href="{{ path('zikulacontentmodule_page_' ~ routeArea ~ 'display', {'slug': page.slug}) }}" title="{{ 'View detail page'|trans|e('html_attr') }}">{{ page.title|notifyFilters('zikulacontentmodule.filterhook.pages')|safeHtml }}</a>
                    </td>
                    <td headers="hViews" class="text-right">
                        {{ page.views }}
                    </td>
                    <td headers="hActive" class="text-center">
                        {% set itemId = page.getKey() %}
                        <a id="toggleActive{{ itemId|e('html_attr') }}" href="javascript:void(0);" class="zikulacontent-ajax-toggle d-none" data-object-type="page" data-field-name="active" data-item-id="{{ itemId|e('html_attr') }}">
                            <i class="fa fa-check text-success{% if not page.active %} d-none{% endif %}" id="yesActive{{ itemId|e('html_attr') }}" title="{{ 'This setting is enabled. Click here to disable it.'|trans|e('html_attr') }}"></i>
                            <i class="fa fa-times text-danger{% if page.active %} d-none{% endif %}" id="noActive{{ itemId|e('html_attr') }}" title="{{ 'This setting is disabled. Click here to enable it.'|trans|e('html_attr') }}"></i>
                        </a>
                        <noscript><div id="noscriptActive{{ itemId|e('html_attr') }}">
                            {% if page.active %}
                                <i class="fa fa-check text-success" title="{{ 'Yes'|trans|e('html_attr') }}"></i>
                            {% else %}
                                <i class="fa fa-times text-danger" title="{{ 'No'|trans|e('html_attr') }}"></i>
                            {% endif %}
                        </div></noscript>
                    </td>
                    <td headers="hActiveFrom" class="text-left">
                        {% if page.activeFrom is not empty %}
                            {{ page.activeFrom|format_datetime('medium', 'short') }}
                        {% endif %}
                    </td>
                    <td headers="hActiveTo" class="text-left">
                        {% if page.activeTo is not empty %}
                            {{ page.activeTo|format_datetime('medium', 'short') }}
                        {% endif %}
                    </td>
                    <td headers="hInMenu" class="text-center">
                        {% set itemId = page.getKey() %}
                        <a id="toggleInMenu{{ itemId|e('html_attr') }}" href="javascript:void(0);" class="zikulacontent-ajax-toggle d-none" data-object-type="page" data-field-name="inMenu" data-item-id="{{ itemId|e('html_attr') }}">
                            <i class="fa fa-check text-success{% if not page.inMenu %} d-none{% endif %}" id="yesInMenu{{ itemId|e('html_attr') }}" title="{{ 'This setting is enabled. Click here to disable it.'|trans|e('html_attr') }}"></i>
                            <i class="fa fa-times text-danger{% if page.inMenu %} d-none{% endif %}" id="noInMenu{{ itemId|e('html_attr') }}" title="{{ 'This setting is disabled. Click here to enable it.'|trans|e('html_attr') }}"></i>
                        </a>
                        <noscript><div id="noscriptInMenu{{ itemId|e('html_attr') }}">
                            {% if page.inMenu %}
                                <i class="fa fa-check text-success" title="{{ 'Yes'|trans|e('html_attr') }}"></i>
                            {% else %}
                                <i class="fa fa-times text-danger" title="{{ 'No'|trans|e('html_attr') }}"></i>
                            {% endif %}
                        </div></noscript>
                    </td>
                    <td headers="hCurrentVersion" class="text-right">
                        {{ page.currentVersion }}
                    </td>
                </tr>
            {% else %}
                <tr class="table-info">
                    <td colspan="{% if routeArea == 'admin' %}10{% else %}9{% endif %}" class="text-center">
                {% trans %}No pages found.{% endtrans %}
                  </td>
                </tr>
            {% endfor %}
            
                </tbody>
            </table>
            </div>
            
            {% if all != 1 and pager|default %}
                {{ pager({rowcount: pager.amountOfItems, limit: pager.itemsPerPage, display: 'page', route: 'zikulacontentmodule_page_' ~ routeArea ~ 'view'}) }}
            {% endif %}
        {% if routeArea == 'admin' %}
                <fieldset class="my-3 pt-3">
                    <div class="row">
                        <label for="zikulaContentModuleAction" class="col-md-3 col-form-label">{% trans %}With selected pages{% endtrans %}</label>
                        <div class="col-md-6">
                            <select id="zikulaContentModuleAction" name="action" class="form-control form-control-sm">
                                <option value="">{% trans %}Choose action{% endtrans %}</option>
                                <option value="delete" title="{{ 'Delete content permanently.'|trans|e('html_attr') }}">{% trans %}Delete{% endtrans %}</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <input type="submit" value="{{ 'Submit'|trans|e('html_attr') }}" class="btn btn-primary btn-sm" />
                        </div>
                    </div>
                </fieldset>
            </div>
        </form>
        {% endif %}

        {{ block('display_hooks') }}
    </div>
{% endblock %}
{% block display_hooks %}
    {# here you can activate calling display hooks for the view page if you need it #}
    {# % if routeArea != 'admin' %}
        {% set hooks = notifyDisplayHooks(eventName='zikulacontentmodule.ui_hooks.pages.display_view', urlObject=currentUrlObject, outputAsArray=true) %}
        {% if hooks is iterable and hooks|length > 0 %}
            {% for area, hook in hooks %}
                <div class="z-displayhook" data-area="{{ area|e('html_attr') }}">{{ hook|raw }}</div>
            {% endfor %}
        {% endif %}
    {% endif % #}
{% endblock %}
