{# purpose of this template: inclusion template for display of related content items #}
{% trans_default_domain 'zikulacontentmodule' %}
{% set hasAdminPermission = permissionHelper.hasComponentPermission('contentItem', constant('ACCESS_EDIT')) %}
{% if items|default and items|length > 0 %}
<ul class="list-group zikulacontentmodule-related-item-list contentitem">
{% for item in items %}
    {% if hasAdminPermission or (item.workflowState == 'approved' and permissionHelper.mayRead(item)) %}
    <li class="list-group-item">
<h5>
    {{ item|zikulacontentmodule_formattedTitle }}
</h5>
    </li>
    {% endif %}
{% endfor %}
</ul>
{% endif %}
