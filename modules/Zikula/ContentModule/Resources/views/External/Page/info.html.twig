{# Purpose of this template: Display item information for previewing from other modules #}
{% trans_default_domain 'zikulacontentmodule' %}
<dl id="page{{ page.getKey() }}">
<dt>{{ page|zikulacontentmodule_formattedTitle|notifyFilters('content.filter_hooks.pages.filter')|safeHtml }}</dt>
{% if page.optionalText is not empty %}<dd>{{ page.optionalText }}</dd>{% endif %}
{% if featureActivationHelper.isEnabled(constant('Zikula\\ContentModule\\Helper\\FeatureActivationHelper::CATEGORIES'), 'page') %}
    <dd>
        <dl class="category-list">
        {% for propName, catMapping in page.categories %}
            <dt>{{ propName }}</dt>
            <dd>{{ catMapping.category.display_name[app.request.locale]|default(catMapping.category.name) }}</dd>
        {% endfor %}
        </dl>
    </dd>
{% endif %}
</dl>
